<div class="col" data-id="<%= portfolio_item.id %>">
  <div class="card shadow-sm">
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>

    <div class="card-body">
      <h3 class="card-text">
      	<span><%= portfolio_item.title %></span>
  		</h3>
      <p class="card-text">
      	<span><%= portfolio_item.subtitle %></span>
  		</p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= button_to "View", portfolio_show_path(portfolio_item), method: :get, class: 'btn btn-sm btn-outline-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>