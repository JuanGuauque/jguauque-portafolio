<%= form_with(model: @portfolio_item) do |form| %>
  <div class="field">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle, style: "display: block" %>
    <%= form.text_area :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <ul>
    <%= form.fields_for :tecgnologies do |tecgnology_form| %>
      <li>
        <%= tecgnology_form.label :name %>
        <%= tecgnology_form.text_field :name %>
      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
