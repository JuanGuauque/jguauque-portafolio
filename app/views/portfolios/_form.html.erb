<%= form_with(model: @portfolio_item) do |form| %>
<div class="row">
  <div class="col-md-6">
    <div class="mb-3">
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :subtitle, style: "display: block" %>
      <%= form.text_area :subtitle, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.file_field :main_image %>
    </div>

    <div class="mb-3">
      <%= form.file_field :thumb_image %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="mb-3">
      <%= form.label :body, style: "display: block" %>
      <%= form.text_area :body, class: 'form-control', rows: 13 %>
    </div>
  </div>
</div>

  <hr>

  <div class="col-md-12">
    <h2>Technologies Used:</h2>
    <div>
      <%= form.fields_for :tecgnologies do |tecgnology_form| %>
        <div class="mb-3">
          <%= tecgnology_form.label :name %>
          <%= tecgnology_form.text_field :name, class: 'form-control' %>
        </div>
      <% end %>
    </div>

    <div class="mb-3 d-grid">
      <%= form.submit "Save Portfolio Item", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
