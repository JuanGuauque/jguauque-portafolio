<%= form_with(model: @portfolio_item) do |form| %>
<div class="row">
  <div class="col-md-6">
    <div class="mb-3">
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :subtitle, style: "display: block" %>
      <%= form.text_area :subtitle, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <label class="btn btn-primary">
        Upload a Main Image file <%= form.file_field :main_image, style: 'display:none;' %>
      </label>
    </div>

    <div class="mb-3">
      <label class="btn btn-primary">
        Upload a Thumb Image file <%= form.file_field :thumb_image, style: 'display:none;' %>
      </label>
    </div>
  </div>

  <div class="col-md-6">
    <div class="mb-3">
      <%= form.label :body, style: "display: block" %>
      <%= form.text_area :body, class: 'form-control', rows: 13 %>
    </div>
  </div>
</div>

  <hr>

  <div class="col-md-12">
    <h2>Technologies Used:</h2>
    <div>
      <%= form.fields_for :tecgnologies do |tecgnology_form| %>
        <%= render 'tecgnology_fields', f: tecgnology_form %>
      <% end %>
      <div>
        <%= link_to_add_association 'Add Technology', form, :tecgnologies %>
      </div>
    </div>

    <div class="mb-3 d-grid">
      <%= form.submit "Save Portfolio Item", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
